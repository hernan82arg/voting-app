{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Values",
    "type": "object",
    "definitions": {
        "k8s": {
            "resources": {
                "type": "object",
                "required": ["cpu", "memory"],
                "properties": {
                    "cpu": {
                        "type": "number"
                    },
                    "memory": {
                        "type": "string",
                        "format": "([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
                    }
                }
            }
        }
    },
    "required": ["votingApp", "deployment"],
    "properties": {
        "votingApp": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "image",
                "resources",
                "config",
                "secrets",
                "service",
                "ingress",
                "probes",
                "autoscaling"
            ],
            "properties": {
                "image": {
                    "type": "object",
                    "description": "Full Docker image (repo and tag) to use in Deployment & Job entities.",
                    "required": ["repository", "tag"],
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "resources": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["requests", "limits"],
                    "properties": {
                        "requests": {
                            "$ref": "#/definitions/k8s/resources"
                        },
                        "limits": {
                            "$ref": "#/definitions/k8s/resources"
                        }
                    }
                },
                "config": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "DUMMY_ENV_VAR"
                    ],
                    "properties": {
                        "DUMMY_ENV_VAR": {
                            "type": "string"
                        }
                    }
                },
                "secrets": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["DUMMY_SECRET"],
                    "properties": {
                        "DUMMY_SECRET": {
                            "type": "string"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["enabled"],
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Create a Service for intracluster access."
                        },
                        "port": {
                            "type": "number",
                            "description": "Expose service on this port."
                        }
                    }
                },
                "serviceAccount": {
                    "type": "string",
                    "description": "Kubernetes ServiceAccount to use. Set to access AWS."
                },
                "ingress": {
                    "type": "object",
                    "additionalProperties": false,
                    "description": "Config for expose app to the internet.",
                    "required": ["enabled"],
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Set to create an Ingress resource. Requires tld and path."
                        },
                        "host": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string",
                            "description": "Path on host & tld."
                        },
                        "tld": {
                            "type": "string",
                            "description": "A subdomain will be added to this value. Example: skillshare.com."
                        }
                    }
                },
                "probes": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "livenessHttpPath": {
                            "type": "string"
                        },
                        "readinessHttpPath": {
                            "type": "string"
                        }
                    }
                },
                "autoscaling": {
                    "type": "object",
                    "required": ["enabled"],
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "minReplicas": {
                            "type": "number"
                        },
                        "maxReplicas": {
                            "type": "number"
                        },
                        "cpuTarget": {
                            "type": "number",
                            "description": "Percentage. Example: 70 (for 70%)"
                        }
                    }
                }
            }
        },
        "deployment": {
            "type": "object",
            "additionalProperties": false,
            "required": ["sha"],
            "properties": {
                "sha": {
                    "type": "string",
                    "format": "^/[a-f0-9]{41}$/"
                }
            }
        }
    }
}
